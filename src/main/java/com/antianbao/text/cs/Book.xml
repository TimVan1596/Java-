<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smallfangyu.bookjavaweb.IBook">

    <select id="GetUserByID" parameterType="int" resultType="Book">
		select * from book where id = #{id}
    </select>

    <select id="getUser" parameterType="int" resultType="Book">
        SELECT * FROM book WHERE id = #{userId}
    </select>

    <insert id="insertUser" parameterType="Book">
        INSERT INTO book(id,name,author,price,date)
        VALUES(#{name}, #{dept}, #{website}, #{phone})
    </insert>

    <select id="getUserList" resultType="Book">
        SELECT * FROM book
    </select>

    <update id="updateUser" parameterType="Book">
        UPDATE book
        SET
        name=
        #{name},dept = #{dept},website = #{website},phone = #{phone}
        WHERE
        id =
        #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM book WHERE id = #{id}
    </delete>
</mapper>